<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>one-jar</id>
	<formats>
		<format>jar</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<dependencySets>
		<dependencySet>
			<includes>
				<include>org.cloudifysource:CLI</include>
			</includes>
			<unpack>true</unpack>
		</dependencySet>
		<dependencySet>
			<excludes>
				<exclude>org.cloudifysource:CLI</exclude>
			</excludes>
			<unpack>true</unpack>
			<unpackOptions>
				<excludes>
					<exclude>**/linux32/libjansi.so</exclude>
				</excludes>
			</unpackOptions>
		</dependencySet>
	</dependencySets>
</assembly>
